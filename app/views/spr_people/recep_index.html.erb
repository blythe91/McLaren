<p id="notice"><%= notice %></p>

<h1>Receptores de Programa</h1>
<%= link_to 'New Spr Person', new_spr_person_path, :class => "waves-effect waves-teal btn-flat" %>

<%= link_to 'Receptor', recep_index_spr_people_path, :class => "waves-effect waves-teal btn-flat" %>
<table>
  <thead>
    <tr>
      <th>Document</th>      
      <th>First name</th>
      <th>Second name</th>
      <th>First last name</th>
      <th>Second last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spr_people.each do |spr_person| %>
      <tr>
        <td><%= spr_person.document_type.to_s+" "+spr_person.document %></td>
        <td><%= spr_person.first_name %></td>
        <td><%= spr_person.second_name %></td>
        <td><%= spr_person.first_last_name %></td>
        <td><%= spr_person.second_last_name %></td>
        <td><%= link_to 'Show', spr_person %></td>
        <td><%= link_to 'Edit', edit_spr_person_path(spr_person) %></td>
        <td><%= link_to 'Destroy', spr_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>