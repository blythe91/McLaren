  <p class="col l3 m6 s12">
    <strong>Second last name:</strong>
    <%= @spr_person.second_last_name %>
  </p>

  <p class="col l3 m6 s12">
    <strong>Mobile phone:</strong>
    <%= @spr_person.mobile_phone %>
  </p>

  <p class="col l3 m6 s12">
