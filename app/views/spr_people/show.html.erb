  <p class="col l3 m6 s12">
    <strong>Asv member:</strong>
    <%= @spr_person.asv_member %>
  </p>

  <p class="col l3 m6 s12">
    <strong>Representative:</strong>
    <%= @spr_person.representative %>
  </p>

   <p class="col l3 m6 s12">
    <strong>Gender:</strong>
    <%= @spr_person.gender %>
  </p>
  
  <p class="col l3 m6 s12">
    <strong>First name:</strong>
    <%= @spr_person.first_name %>
  </p>

  <p class="col l3 m6 s12">
