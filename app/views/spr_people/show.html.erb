      <% @spr_person.people.each do |people| %>
        <p class="col l3 m6 s12">
          <strong>dnis:</strong>
          <%= people.dnis %>
        </p>
        <p class="col l3 m6 s12">
          <strong>Birth:</strong>
          <%= people.birth %>
        </p>
        <p class="col l3 m6 s12">
          <strong>Promise day:</strong>
          <%= people.promise_day %>
        </p>
        <p class="col l3 m6 s12">
          <strong>Resident Parish:</strong>
          <%= people.parish.to_s %>
        </p>        
