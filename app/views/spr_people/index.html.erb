<p id="notice"><%= notice %></p>

<h3>Adultos Scout</h3>
<%= link_to 'New Spr Person', new_spr_person_path, :class => "waves-effect waves-teal btn-flat" %>

<%= link_to 'Receptor', recep_index_spr_people_path, :class => "waves-effect waves-teal btn-flat" %>
<h6>Adultos Registrados: <%= Adult.joins(person: :spr_person).count%></h6>
  
<table>
  <thead>
    <tr>
      <th>Document</th>
      <th>dnis</th>
      <th>Full name</th>
      <th>unidad</th>
      <th>cargo</th>
      <th>grupo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spr_people.each do |spr_person| %>


      <tr>
        <td><%= spr_person.id_document %></td>
        

        <% spr_person.people.each do |people| %>
          <td><%= people.dnis %></td>
          <td><%= spr_person.full_name %> </td>
          <% people.adults.each do |adult| %>
            <% adult.registries.each do |regist| %>
            <td><%= regist.unity %></td>
            <td><%= regist.charge %></td>
            <td><%= regist.group %></td>
            <% end %>
          <% end %>  
        <% end %>



        <td><%= link_to 'Show', spr_person %></td>
        <td><%= link_to 'Edit', edit_spr_person_path(spr_person) %></td>
        <td><%= link_to 'Destroy', spr_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


