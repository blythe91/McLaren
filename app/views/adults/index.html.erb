<h1>Adults</h1>

<table>
  <thead>
    <tr>
      <th>dnis</th>
      <th>Document</th>
      <th>Full Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adults.each do |adult| %>
      <tr>
        <td><%= adult.dnis %></td>
        <td><%= adult.id_document %></td>
        <td><%= adult.full_name %></td>
        <td><%= link_to 'Show', adult %></td>
        <td><%= link_to 'Edit', edit_adult_path(adult) %></td>
        <td><%= link_to 'Destroy', adult, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

