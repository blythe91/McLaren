<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Dnis</th>
      <th>Promise day</th>
      <th>Birth</th>
      <th>Spr person</th>
      <th>Parish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.dnis %></td>
        <td><%= person.promise_day %></td>
        <td><%= person.birth %></td>
        <td><%= person.spr_person %></td>
        <td><%= person.parish %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

